{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"],
      "@user/*": ["src/modules/user/*"],
      "@post/*": ["src/modules/post/*"],
      "@shared/*": ["src/shared/*"],
      "@question/*": ["src/modules/question/*"],
      "@tag-post/*": ["src/modules/tag-post/*"],
      "@comment-post/*": ["src/modules/comment-post/*"],
      "@comment-question/*": ["src/modules/comment-question/*"],
      "@home-modules/*": ["src/modules/home/*"],
      "@topic/*": ["src/modules/topic/*"]
    }
  },
  "exclude": ["src/node_modules", "dist", "*.js"],
  "types": ["node"]
}
