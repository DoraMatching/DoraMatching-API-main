{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"],
      "@user/*": ["src/modules/user/*"],
      "@post/*": ["src/modules/post/*"],
      "@shared/*": ["src/shared/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "exclude": ["src/node_modules", "dist", "*.js"],
  "types": ["node"]
}
